{
    "name": "tiu-ram0n/brazilian-portuguese",
    "type": "flarum-extension",
    "description": "Pacote de idioma Português do Brasil.",
    "homepage": "https://ramonguilherme.com.br",	
    "keywords": [
			"brazilian",
			"portuguese",
			"language",
			"locale",
	    		"português",
	    		"extensao"	
	],
    "license": "MIT",
    "authors": [
        {
            "name": "Ramon Guilherme",
            "email": "ramonguilherme@outlook.com",
            "homepage": "https://ramonguilherme.com.br"
        }
           
    ],
    "support": {
	    "issues": "https://github.com/ram0ng1/brazilian-portuguese/issues",
	    "source": "https://github.com/ram0ng1/brazilian-portuguese"
    },	
    "require": {
        "flarum/core": "^1.0.0"
    },
    "extra": {
        "flarum-extension": {
            "title": "Brazilian Portuguese",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#55a667",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/18543"
        },
        "flarum-locale": {
            "code": "pt-BR",
            "title": "Português Brasileiro"
        }
    }
}
